views:
  - type: table
    name: Posts
    filters:
      and:
        - file.folder == "posts"
        - file.ext == "md"
    order:
      - file.name
      - title
      - date
      - draft
    sort:
      - property: date
        direction: DESC
    columnSize:
      file.name: 139
      note.title: 351
      note.date: 133
      note.draft: 70
