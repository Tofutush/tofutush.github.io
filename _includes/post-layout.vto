---
layout: layout.vto
---
<h1>{{ title }}</h1>
<p class="date">Posted: {{ date |> formatDate }}
{{ content }}
<hr/>
{{ set prev = collections.posts |> sortPosts |> reverse |> getPreviousCollectionItem }}
{{ set next = collections.posts |> sortPosts |> reverse |> getNextCollectionItem }}
<div class="prev-next">
    {{ if prev }}<p><a href="{{ prev.url }}">&lt;==</a></p>{{ /if }}
    <p><a href="/">Home</a></p>
    {{ if next }}<p><a href="{{ next.url }}">==&gt;</a></p>{{ /if }}
</div>
