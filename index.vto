<h1>Blog</h1>

{{ for p of collections.posts |> sortPosts }}
	<p><span class="date">{{ p.data.edited || p.data.date |> formatDate }}</span> <a href="{{ p.url }}">{{ p.data.title }}</a></p>
{{ /for }}

<h1>Pages</h1>

{{ for p of collections.pages }}
	<p><span class="date">{{ p.data.edited |> formatDate }}</span> <a href="{{ p.url }}">{{ p.data.title }}</a></p>
{{ /for }}

